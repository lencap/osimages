{
  "variables": {
    "vm_name": "centos72003",
    "ssh_user": "vmuser",
    "ssh_pass": "password"
  },
  "builders": [
    {
      "headless": "true",
      "iso_url": "https://mirror.umd.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-2003.iso",
      "iso_checksum": "659691c28a0e672558b003d223f83938f254b39875ee7559d1a4a14c79173193",
      "iso_checksum_type": "sha256",
      "vm_name": "{{user `vm_name`}}",
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_password": "{{user `ssh_pass`}}",      
      "ssh_timeout": "10m",
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_os_type": "RedHat_64",
      "ssh_pty": "true",
      "disk_size": "8192",
      "hard_drive_interface": "sata",
      "sata_port_count": "4",
      "http_directory": "http",
      "boot_command": [
        "<esc><wait>linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
      ],
      "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S shutdown -P now",
      "memory": "1024",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--nictype1",
          "Virtio"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natdnsproxy1",
          "on"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./scripts/vmnet",
      "destination": "/home/{{user `ssh_user`}}/"
    },
    {
      "type": "shell",
      "environment_vars": [
        "DISABLE_IPV6=true",
        "VM_NAME={{user `vm_name`}}",
        "SSH_USERNAME={{user `ssh_user`}}",
        "SSH_PASSWORD={{user `ssh_pass`}}"
      ],      
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/centos-update.sh",
        "scripts/centos-setup.sh"
      ]
    }
  ]
}
