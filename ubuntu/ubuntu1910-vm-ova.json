{
  "builders": [
    {
      "headless": "false",
      "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/eoan/release/ubuntu-19.10-server-amd64.iso",
      "iso_checksum": "921fd8b271c04aa86a321cc35b40e677f9b85f7903bf2204efb2389b0f0a64c1",
      "iso_checksum_type": "sha256",
      "vm_name": "ubuntu1910-vm",
      "ssh_username": "vmuser",
      "ssh_password": "password",
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_os_type": "Ubuntu_64",
      "ssh_wait_timeout": "10000s",
      "boot_wait": "5s",
      "disk_size": "8192",
      "hard_drive_interface": "sata",
      "sata_port_count": "4",
      "http_directory": "http",
      "boot_command": [    
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz noapic <wait>",
        "initrd=/install/initrd.gz <wait>",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname=ubuntu1910 <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA <wait>",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "passwd/user-fullname=vmuser <wait>",
        "passwd/user-password=password <wait>",
        "passwd/user-password-again=password <wait>",
        "passwd/username=vmuser <wait>",
        "-- <enter><wait>"
      ],
      "shutdown_command": "echo 'password' | sudo -S shutdown -P now",
      "memory": "1024",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--nictype1", "Virtio"],
        ["modifyvm", "{{.Name}}", "--nictype2", "Virtio"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "UPDATE=true",
        "DISABLE_IPV6=true",
        "SSH_USERNAME=vmuser",
        "SSH_PASSWORD=password"
      ],
      "execute_command": "echo 'password' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}
