{
  "builders": [
    {
      "iso_url": "https://mirror.umd.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1908.iso",
      "iso_checksum": "9a2c47d97b9975452f7d582264e9fc16d108ed8252ac6816239a3b58cef5c53d",
      "iso_checksum_type": "sha256",
      "vm_name": "centos7",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_os_type": "RedHat_64",
      "ssh_wait_timeout": "900s",
      "ssh_pty": "true",
      "disk_size": "8192",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "boot_command": ["<esc><wait>linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"],
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
        ["modifyvm", "{{.Name}}", "--cpuexecutioncap", "50"]
      ],
      "headless": "true"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo mount -o loop /home/vagrant/VBoxGuestAdditions.iso /mnt",
        "sudo sh /mnt/VBoxLinuxAdditions.run",
        "sudo umount /mnt"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "./centos7.box",
      "vagrantfile_template": "./Vagrantfile"
    }
  ]
}
