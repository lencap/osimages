{
  "builders": [
    {
      "iso_url": "https://mirror.umd.edu/centos/8/isos/x86_64/CentOS-8-x86_64-1905-dvd1.iso",
      "iso_checksum": "ea17ef71e0df3f6bf1d4bf1fc25bec1a76d1f211c115d39618fe688be34503e8",
      "iso_checksum_type": "sha256",
      "vm_name": "centos8",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_os_type": "RedHat_64",
      "ssh_wait_timeout": "900s",
      "ssh_pty": "true",
      "disk_size": "8192",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "boot_command": ["<esc><wait>linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks8.cfg<enter><wait>"],
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
        ["modifyvm", "{{.Name}}", "--cpuexecutioncap", "50"]
      ],
      "headless": "true"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo mount -o loop /home/vagrant/VBoxGuestAdditions.iso /mnt",
        "sudo sh /mnt/VBoxLinuxAdditions.run",
        "sudo umount /mnt"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "./centos8.box",
      "vagrantfile_template": "./Vagrantfile_8"
    }
  ]
}